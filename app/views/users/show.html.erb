<div class="container mx-auto">
  <%# avatar %>
  <div class="avatar">
    <div class="w-24 rounded-full">
      <img src="https://api.lorem.space/image/face?hash=92310">
    </div>
  </div>
  <%# username %>
  <div class="">
    <%= @user.name %>
  </div>

  <% if @user == current_user %>
    <%# edit_link %>
    <%= button_to "編集", edit_user_registration_path, method:"get", class: "btn btn-secondary" %>
  <% end %>
</div>
